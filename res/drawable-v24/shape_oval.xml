<?xml version="1.0" encoding="utf-8"?>
<!-- 類型 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    <!--漸層顏色-->
    <gradient
        android:startColor="#6495ED"
        android:endColor="#F0FFFF"
        android:gradientRadius="150dp"
        android:type="radial"
        android:centerX="0"
        android:centerY="0.3" />
    <!--<solid android:color="#18506C" />-->

    <!-- 文字與邊框的間距 -->
    <padding
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp"
        android:left="5dp"/>
    <!-- 形狀大小 -->
    <size
        android:width="120dp"
        android:height="120dp" />
    <!-- 邊框線 -->
    <stroke
        android:width="1dp"
        android:color="#F0F8FF"
        android:dashGap="2dp"
        android:dashWidth="5dp" />
</shape>

